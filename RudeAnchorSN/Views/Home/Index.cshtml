<div class="home-forms">
    <div class="authorization-form form-container">
        @using (Html.BeginForm("Index", "SignIn", FormMethod.Post))
        {
            <div class="form-line">
                <div class="form-label">Email</div>
                <input type="text" name="Email" required />
            </div>

            <div class="form-line">
                <div class="form-label">Пароль</div>
                <input type="password" name="Password" required />
            </div>

            <div class="form-line">
                <button type="submit">Авторизация</button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="error-text authentication-error">@TempData["Error"]</div>
        }
    </div>

    <div class="registration-form form-container">
        @using (Html.BeginForm("Index", "SignUp", FormMethod.Get))
        {
            <div class="form-line">
                <div class="form-label">Имя</div>
                <input type="text" name="FirstName" required />
            </div>

            <div class="form-line">
                <div class="form-label">Фамилия</div>
                <input type="text" name="LastName" required />
            </div class="form-line">

            <div class="form-line">
                <div class="form-label">Дата рождения</div>
                <input type="date" name="BirthDate" required />
            </div>

            <div class="form-line">
                <button type="submit">Регистрация</button>
            </div>
        }
    </div>
</div>
</div>